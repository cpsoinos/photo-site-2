<%= form_for [@category, @photo] do |f| %>

  <% if @photo.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@photo.errors.count, "error") %> prohibited
        this photo from being saved:
      </h2>
      <ul>
        <% @photo.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= image_tag(@photo.image_url) if @photo.image? %>
